# this file is auto-generated from terraform.tfvars.j2
# based on variables in ansible inventory
# scripts loads here, otherwise defaults are loaded from variables.tf

# Steps to generate the api key
# 1. ibmcloud login --sso
# 2. ibmcloud iam api-key-create <hf-api-key> --file <ibmcloud-api-key.txt> -d "my api key for IBM Cloud"
# 3. Retrieve the apikey value in the <ibmcloud-api-key.txt> file
# otherwise set in ansible
apikey       = "{{api_key}}"

#Your own tags for resources created on NextGen
base_name    = "{{resource_prefix}}"

# The name of the dns zone to create
domain_name  = "{{domain_name}}"

#Adjust the VMs for works and nfs servers.
worker_nodes  = "{{worker_nodes}}"
master_nodes  = "{{master_nodes}}"

#Use the LON data center
region       = "{{vpc_region}}"
zone         = "{{vpc_zone}}"

# specify your key name on the data center
key_name     = "{{key_name}}"

# specify the ssh-key filename to use
# default should be id_rsa unless you're using
# a non-default key-file for your VPC setup
# the file that's used will be: ~/.ssh/<ssh_key_file>[.pub]
ssh_key_file = "{{ssh_key_file}}"

# the profile for different types of VMs
worker_profile = "{{worker_profile}}"
master_profile = "{{master_profile}}"
login_profile = "{{login_profile}}"

# Can only be centos/RedHat as ansible scripts are based on centos.
image_name   = "{{image_name}}"
volume_capacity = "{{volume_capacity}}"

volume_dir = "{{volume_dir}}"

# VPN peer settings
vpn_peer = {
  address = "{{vpn_peer.address}}",
  cidrs = {{vpn_peer.cidrs | to_json}},
  psk = "{{vpn_peer.psk}}",
  security = {
    auth = "{{vpn_peer.security.auth}}",
    encr = "{{vpn_peer.security.encr}}"
    DH_Group = {{vpn_peer.security.DH_Group}},
    ip_sec = {
      key_lifetime = {{vpn_peer.security.ip_sec.key_lifetime}},
      PFS = "{{vpn_peer.security.ip_sec.PFS}}"
    },
    ike = {
      version = {{vpn_peer.security.ike.version}},
      key_lifetime = {{vpn_peer.security.ike.key_lifetime}}
    }
  }
}

lsf_cluster_name="{{lsf_cluster_name}}"

gen_files_dir="{{gen_files_dir}}"
